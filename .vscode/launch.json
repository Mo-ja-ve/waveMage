    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C/C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "C:/Users/USER/proj/build/wavemage.exe", 
            "args": ["test.wav"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe",  // Or your GDB path on Windows
            "setupCommands": [
              {
                "description": "Enable pretty-printing for GDB",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              },
            ],
            "preLaunchTask": "build"
          }
    ]
}